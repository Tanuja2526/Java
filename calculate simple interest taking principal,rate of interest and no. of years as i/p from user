import java.util.*;
public class SimpleInterest {

	public static void main(String[] args) {
		float p,n,r,si;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter principal amount no. of yars an rate of interest:");
		p=sc.nextFloat();
		n=sc.nextFloat();
		r=sc.nextFloat();
		si=p*n*r/100;
		System.out.println("The Simple Interest="+si);
  }
}
